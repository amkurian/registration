
  <div class="row">
  <div class ="col-md-4">
  <div class="form-group">
   <%= f.label :first_name,'First Name'%>
   <%= f.text_field :first_name ,:required => true,class:"form-control" %>
   </div>
   </div>
  <div class="col-md-4">
  <%= f.label :middle_name,'Middle Name'%>
  <%= f.text_field :middle_name,class:"form-control"%>
  </div>
  <div class="col-md-4">
  <%= f.label :last_name,'Last Name'%>
  <%= f.text_field :last_name, :required => true,class:"form-control"%>
  </div>
  </div>
 <div class="row">
 <div class="col-md-4">
  <%= f.label :email,'Email'%>
  <%= f.text_field :email ,:required => true,class:"form-control"%>
  </div>
  <div class="col-md-4">
  <%= f.label :logid,'Login ID' %>
  <%= f.text_field :logid,class:"form-control" %>
  </div>
  <% if params[:action] == "new" %>
  <div class="col-md-4">
  <%= f.label :password,'Password' %>
  <%= f.password_field :password, :required => true,class:"form-control"%>
  </div>
  </div>
   <div class="row">
 <div class="col-md-4">
  <%= f.label :password_confirmation,'Password Confirmation'%>
  <%= f.password_field :password_confirmation,class:"form-control"%>
  </div>
  <% end %>
   <div class="col-md-4">
  <%= f.label :employee_id,'Employee ID'%>
  <%= f.text_field :employee_id,class:"form-control"%>
  </div>
   <div class="col-md-4">
  <%= f.label :date_of_birth,'Date of Birth'%>
  <%= f.text_field :date_of_birth,:required => true,class:"form-control",id:"datepicker2"%>
  </div>
  </div>

  <div class="row">
  <div class="col-md-4">
  <%= f.label :gender,'Gender'%>
  <%= f.select(:gender, options_for_select([['Male'], ['Female']]),class:"form-control") %>
  </div>
 <div class="col-md-4">     
  <%= f.label :time_zone,'Time Zone'%>
  <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones,class:"form-control") %>
  </div>
 <div class="col-md-2">
  <%= f.label :designation_id,'Designation' %>
 <%= f.collection_select(:designation_id, @designations, :id, :name) %> 
  </div>
  <div class="col-md-2">
  <%= f.label :role_id,'Role' %>
 <%= f.collection_select(:role_id, @role, :id, :name) %> 
  </div>
  </div>

  <div class="row">
  <div class="col-md-4">
  <%= f.label :date_of_joining,'Date of Joining'%>
  <%= f.text_field(:date_of_joining,:required => true,class:"form-control",id:"datepicker3") %>
  </div>
  <div class="col-md-4">
  <%= f.label :education,'Education'%>
  <%= f.text_area :education,class:"form-control"%>
  </div>
   <div class="col-md-4">
  <%= f.label :comments,'Comments'%>
  <%= f.text_area :comments,class:"form-control"%>
   </div>
   </div>
  <div class="row">
  <div class="col-md-4">
  <%= f.label :work_phone,'Work_Phone'%>
  <%= f.text_field :work_phone,:required => true ,class:"form-control"%>
  </div>

  <div class="col-md-4">
  <%= f.label :isactive,"Is Active" %>
  <%= f.radio_button(:isactive,true)%>
  </div>
  <div class="col-md-4">
  <%= f.label :isactive,"Is locked" %>
  <%= f.radio_button(:isactive,false) %>
  </div>
  </div>
  

  <div class="row">
  <div class="col-md-4">
  <%= f.label :date_of_deactivation,'Date of Deactivation'%>
  <%= f.text_field(:date_of_deactivation,class:"form-control",id:"datepicker") %>
  </div>
   <div class="col-md-4">
  <%= f.label :Reason,'Reason of Deactivation' %>
  <%= f.select(:Reason, options_for_select([['No longer an employee with us'],['Absconding'],['Long Medical Live']]),class:"form-control") %>
  </div>
  </div>
 
